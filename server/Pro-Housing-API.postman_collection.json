{
  "info": {
    "name": "Pro Housing API",
    "description": "Complete API collection for Pro Housing admin and property management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{adminToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Admin Authentication",
      "item": [
        {
          "name": "Create Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Super Admin\",\n  \"email\": \"admin@prohousing.com\",\n  \"password\": \"AdminPass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/create",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "create"]
            }
          }
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', response.data.accessToken);",
                  "    console.log('Admin token saved:', response.data.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@prohousing.com\",\n  \"password\": \"AdminPass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "login"]
            }
          }
        },
        {
          "name": "Get Admin Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/profile",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "profile"]
            }
          }
        },
        {
          "name": "Update Admin Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Admin Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/profile",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "profile"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"AdminPass123!\",\n  \"newPassword\": \"NewAdminPass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "change-password"]
            }
          }
        },
        {
          "name": "Admin Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/admin/logout",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Property Management",
      "item": [
        {
          "name": "Create Property",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Luxury 3BHK Apartment",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Beautiful luxury apartment with modern amenities",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "5000000",
                  "type": "text"
                },
                {
                  "key": "propertyType",
                  "value": "APARTMENT",
                  "type": "text"
                },
                {
                  "key": "listingType",
                  "value": "SALE",
                  "type": "text"
                },
                {
                  "key": "bedrooms",
                  "value": "3",
                  "type": "text"
                },
                {
                  "key": "bathrooms",
                  "value": "2",
                  "type": "text"
                },
                {
                  "key": "area",
                  "value": "1200",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "123 Main Street, Bandra West",
                  "type": "text"
                },
                {
                  "key": "city",
                  "value": "Mumbai",
                  "type": "text"
                },
                {
                  "key": "state",
                  "value": "Maharashtra",
                  "type": "text"
                },
                {
                  "key": "pincode",
                  "value": "400050",
                  "type": "text"
                },
                {
                  "key": "furnished",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "parking",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "mainImage",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/properties/create",
              "host": ["{{baseUrl}}"],
              "path": ["properties", "create"]
            }
          }
        },
        {
          "name": "Get All Properties",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/properties/all?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["properties", "all"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Property by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Update Property",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Updated Property Title",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "6000000",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Property",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Add Property Images",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId/images",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId", "images"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Toggle Property Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId/status",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId", "status"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Update Property Highlight",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"highlight\": \"FEATURED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/properties/:propertyId/highlight",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":propertyId", "highlight"],
              "variable": [
                {
                  "key": "propertyId",
                  "value": "property-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root Endpoint",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": [""]
            }
          }
        }
      ]
    }
  ]
}
